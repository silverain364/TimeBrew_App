<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinPage">

    <ScrollView
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Wrap all elements inside this ConstraintLayout within ScrollView -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/SignUp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관리자 가입"
                android:textSize="50dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <EditText
                android:id="@+id/SignUp_Email_edt"
                android:layout_width="500dp"
                android:layout_height="65dp"
                android:hint="이메일"
                android:paddingStart="25dp"
                android:background="@drawable/solid_edittext_signup"
                android:textStyle="bold"
                android:textColor="#8A8A8A"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/SignUp_txt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <EditText
                android:id="@+id/SignUp_Passwd_edt"
                android:layout_width="500dp"
                android:layout_height="65dp"
                android:hint="비밀번호"
                android:paddingStart="25dp"
                android:background="@drawable/solid_edittext_signup"
                android:textStyle="bold"
                android:textColor="#8A8A8A"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/SignUp_Email_edt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <EditText
                android:id="@+id/SignUp_PasswdAgain_edt"
                android:layout_width="500dp"
                android:layout_height="65dp"
                android:hint="비밀번호 확인"
                android:paddingStart="25dp"
                android:background="@drawable/solid_edittext_signup"
                android:textStyle="bold"
                android:textColor="#8A8A8A"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/SignUp_Passwd_edt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <EditText
                android:id="@+id/SignUp_MemberName_edt"
                android:layout_width="500dp"
                android:layout_height="65dp"
                android:hint="사업자 이름"
                android:paddingStart="25dp"
                android:background="@drawable/solid_edittext_signup"
                android:textStyle="bold"
                android:textColor="#8A8A8A"
                android:layout_marginTop="65dp"
                app:layout_constraintTop_toBottomOf="@+id/SignUp_PasswdAgain_edt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <EditText
                android:id="@+id/SignUp_PhNum_edt"
                android:layout_width="500dp"
                android:layout_height="65dp"
                android:hint="전화번호"
                android:paddingStart="25dp"
                android:background="@drawable/solid_edittext_signup"
                android:textStyle="bold"
                android:textColor="#8A8A8A"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/SignUp_MemberName_edt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <EditText
                android:id="@+id/SignUp_CafeName_edt"
                android:layout_width="500dp"
                android:layout_height="65dp"
                android:hint="카페명"
                android:paddingStart="25dp"
                android:background="@drawable/solid_edittext_signup"
                android:textStyle="bold"
                android:textColor="#8A8A8A"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/SignUp_PhNum_edt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/SignUp_register_btn"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="등  록"
                android:background="@drawable/solid_button"
                android:layout_margin="60dp"
                android:layout_marginBottom="60dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/SignUp_CafeName_edt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@+id/SignUp_register_btn" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
