<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="552dp"
        android:layout_height="348dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white">
>


<ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/logo_img"
        android:src="@drawable/timebrew_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="12dp"

/>

<!--테이블 숫자는 임의로 작성(실제 코드에서는 자바를 통해 받아올 예정)-->
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/table_num"
        android:text="10번 테이블"
        app:layout_constraintTop_toBottomOf="@+id/logo_img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:textSize="36dp"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
/>

<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/table_caption"
        android:text="테이블에 대한 정보입니다 💥"
        app:layout_constraintTop_toBottomOf="@+id/table_num"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:textSize="20dp"

/>

    <TextView
            android:layout_width="129dp"
            android:layout_height="36dp"
            android:id="@+id/enter_time_info"
            android:text="입장 시간"
            app:layout_constraintTop_toBottomOf="@+id/table_caption"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:background="@drawable/outline_file"
            android:gravity="center"
    />

    <TextView
            android:layout_width="129dp"
            android:layout_height="36dp"
            android:id="@+id/set_time_info"
            android:text="설정 시간"
            app:layout_constraintTop_toBottomOf="@+id/table_caption"
            app:layout_constraintLeft_toRightOf="@+id/enter_time_info"
            android:layout_marginLeft="52dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:background="@drawable/outline_file"
            android:gravity="center"
    />

    <TextView
            android:layout_width="129dp"
            android:layout_height="36dp"
            android:id="@+id/left_time_info"
            android:text="잔여 시간"
            app:layout_constraintTop_toBottomOf="@+id/table_caption"
            app:layout_constraintLeft_toRightOf="@+id/set_time"
            android:layout_marginLeft="52dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:background="@drawable/outline_file"
            android:gravity="center"
    />

    <EditText
            android:layout_width="129dp"
            android:layout_height="36dp"
            android:id="@+id/enter_time"
            app:layout_constraintTop_toBottomOf="@+id/enter_time_info"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/outline_file"
            android:text="15:38"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
    />

    <EditText
            android:layout_width="129dp"
            android:layout_height="36dp"
            android:id="@+id/set_time"
            app:layout_constraintTop_toBottomOf="@+id/set_time_info"
            app:layout_constraintLeft_toRightOf="@+id/enter_time"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/outline_file"
            android:text="04:00"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
    />

    <EditText
            android:layout_width="129dp"
            android:layout_height="36dp"
            android:id="@+id/left_time"
            app:layout_constraintTop_toBottomOf="@+id/left_time_info"
            app:layout_constraintLeft_toRightOf="@+id/set_time"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/outline_file"
            android:text="00:30"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
    />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_retouch"
            app:layout_constraintBaseline_toBaselineOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set_time"
            android:layout_marginTop="28dp"
            android:text="시간 수정"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="@color/btn_color"


    />










</androidx.constraintlayout.widget.ConstraintLayout>