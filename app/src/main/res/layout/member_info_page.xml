<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemberInfoPage">

    <TextView
        android:id="@+id/member_info_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관리자 페이지"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="900dp"
        android:layout_height="2dp"
        android:background="#543118"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/member_info_txt"/>

    <FrameLayout
            android:id="@+id/frameLayoutOverlay"
            android:layout_width="580dp"
            android:layout_height="500dp"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:layout_width="580dp"
                android:layout_height="65dp"
                android:paddingTop="15dp"
                android:text="사업자 이름"
                android:paddingStart="25dp"
                android:background="@drawable/solid_edittext_signup_accept"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/member_info_name_txt"
                android:layout_marginTop="5dp"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:paddingTop="10dp"
                android:textSize="20dp"
                android:hint="김사장"
                android:paddingStart="25dp"
                android:background="@drawable/solid_edittext_signup"
                android:translationX="200dp" />
        <TextView
                android:layout_width="580dp"
                android:layout_height="65dp"
                android:translationY="90dp"
                android:paddingTop="15dp"
                android:text="카페명"
                android:paddingStart="25dp"
                android:background="@drawable/solid_edittext_signup_accept"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/member_info_cafename_txt"
                android:layout_marginTop="5dp"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:translationY="90dp"
                android:paddingTop="10dp"
                android:textSize="20dp"
                android:hint="커피홀릭"
                android:paddingStart="25dp"
                android:background="@drawable/solid_edittext_signup"
                android:translationX="200dp" />
        <TextView
                android:layout_width="580dp"
                android:layout_height="65dp"
                android:translationY="180dp"
                android:paddingTop="15dp"
                android:text="이메일"
                android:paddingStart="25dp"
                android:background="@drawable/solid_edittext_signup_accept"
                android:textSize="20sp" />
        <TextView
                android:id="@+id/member_info_email_txt"
                android:layout_marginTop="5dp"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:translationY="180dp"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:hint="abc123@gmail.com"
                android:paddingStart="25dp"
                android:background="@drawable/solid_edittext_signup"
                android:translationX="200dp" />
        <TextView
                android:layout_width="580dp"
                android:layout_height="65dp"
                android:translationY="270dp"
                android:paddingTop="15dp"
                android:text="아이디"
                android:paddingStart="25dp"
                android:background="@drawable/solid_edittext_signup_accept"
                android:textSize="20sp" />

        <TextView
                android:layout_marginTop="5dp"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:translationY="270dp"
                android:paddingTop="10dp"
                android:textSize="20dp"
                android:hint="kim123123"
                android:paddingStart="25dp"
                android:background="@drawable/solid_edittext_signup"
                android:translationX="200dp" />
        <TextView
                android:layout_width="580dp"
                android:layout_height="65dp"
                android:translationY="360dp"
                android:paddingTop="15dp"
                android:text="전화번호"
                android:paddingStart="25dp"
                android:background="@drawable/solid_edittext_signup_accept"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/member_info_PhNum_txt"
                android:layout_marginTop="5dp"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:translationY="360dp"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:hint="010-1234-5678"
                android:paddingStart="25dp"
                android:background="@drawable/solid_edittext_signup"
                android:translationX="200dp" />

    </FrameLayout>
    <Button
            android:id="@+id/member_info_check_btn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="확  인"
            android:background="@drawable/solid_button"
            android:layout_margin="60dp"
            android:layout_marginBottom="60dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>