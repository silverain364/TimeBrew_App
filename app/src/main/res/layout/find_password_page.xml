<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FindPasswordPage">

    <TextView
            android:id="@+id/member_info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    <View
            android:id="@+id/view"
            android:layout_width="900dp"
            android:layout_height="2dp"
            android:background="#543118"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/member_info_txt"/>

    <EditText
            android:id="@+id/SignUp_Email_edt"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:hint="이메일"
            android:paddingStart="25dp"
            android:background="@drawable/solid_edittext_signup"
            android:textStyle="bold"
            android:textColor="#8A8A8A"
            android:layout_marginTop="150dp"
            android:layout_marginRight="120dp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    <Button
            android:id="@+id/SignUp_EmailCheck_btn"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:text="이메일 인증"
            android:background="@drawable/solid_edittext_signup_accept"
            android:layout_marginTop="157dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/SignUp_Email_edt"
            app:layout_constraintTop_toTopOf="@+id/view"/>

    <Button
            android:id="@+id/member_info_check_btn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="확  인"
            android:background="@drawable/solid_button"
            android:layout_marginTop="250dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_EmailCheck_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>